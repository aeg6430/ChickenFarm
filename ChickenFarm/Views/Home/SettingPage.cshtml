
<link rel="stylesheet" href="~/Content/settingPage.css">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css"
      integrity="sha512-iecdLmaskl7CVkqkXNQ/ZH/XLlvWZOJyj7Yy7tcenmpD1ypASozpmT/E0iPtmFIB46ZmdtAc9eNBvH0H/ZpiBw=="
      crossorigin="anonymous" referrerpolicy="no-referrer" />
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"></script>
<script src="https://code.jquery.com/jquery-3.7.0.min.js" integrity="sha256-2Pmvv0kuTBOenSvLm6bvfBSSHrUJ+3A7x6P5Ebd07/g=" crossorigin="anonymous"></script>


<div id="app">
    <div class="parent">
        <div class="card border-0 " style="width: 350px; border-radius: 12px; background-color: #f7ad5d;">

            <div class="card-body">
                <h5 class="card-title text-center">設定</h5>
                <hr style="color: white;" />

                <button class="btn" @@click="toggleNotify()">
                    <i :class="clickNotifySwitchIcon" style="color: white;"></i>
                </button>
                <label class="form-check-label">通知音效</label>

                <hr style="color: white;" />

                <button class="btn" @@click="toggleSound()">
                    <i :class="clickSoundSwitchIcon" style="color: white;"></i>
                </button>
                <label class="form-check-label">點擊音效</label>

                

                

                <div v-show="!this.isLoggedin">
                    <hr style="color: white;" />
                    <button class="btn" @@click="reloadGame"><i class="fa-solid fa-cloud-arrow-down" style="color :white;"></i></button>
                    <label class="form-check-label">載入本地存檔</label>
                    <hr style="color: white;" />
                    <button class="btn" @@click="resetGame"><i class="fa-solid fa-trash" style="color :white;"></i></button>
                    <label class="form-check-label">刪除本地存檔</label>
                </div>
                


                <div v-show="this.isLoggedin">
                    <hr style="color: white;" />
                    <button class="btn"  @@click="logout"><i class="fa-solid fa-arrow-right-from-bracket" style="color :white;"></i></button>
                    <label class="form-check-label">登出</label>
                </div>
                

            </div>

            <button class="buttonRedirect"  @@click="saveSwitchStatus()" onclick="location.href='@Url.Action("LandingPage","Home")'">完成</button>








        </div>
    </div>

    <div class="toast-container">
        <div class="toast" role="alert" aria-live="assertive" aria-atomic="true" v-show="toastStatus !== 10" >
            <div class="toast-header">
                <strong class="me-auto"  >{{toastData[toastStatus].type}}</strong>
                <button type="button" class="btn-close" data-bs-dismiss="toast" aria-label="Close"></button>
            </div>
            <div class="toast-body">
                <p>

                    {{toastData[toastStatus].text}}
               
                </p>
            </div>
        </div>
    </div>




</div>
